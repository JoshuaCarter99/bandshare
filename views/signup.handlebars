
  <h2 class='title d-flex justify-content-center mb-0 pb-2 pt-3'>Sign Up</h2>
  <form class='signup-form container-fluid m-auto'>
    <div class='mb-3 m-auto form-size'>
      <label for='name-signup' class='form-label'>Username</label>
      <input
        class='form-control'
        type='text'
        id='name-signup'
        placeholder='Elfo'
      />
    </div>
    <div class='mb-3 m-auto form-size'>
      <label for='email-signup' class='form-label'>Email</label>
      <input
        class='form-control'
        type='text'
        id='email-signup'
        placeholder='elfo@example.com'
      />
    </div>
    <div class='mb-3 m-auto form-size'>
      <label for='password-signup' class='form-label'>Password</label>
      <input class='form-control mb-4' type='password' id='password-signup' />
      <button class='btn btn-primary mb-4' type='submit'>Sign Up</button>
    </div>
  </form>

