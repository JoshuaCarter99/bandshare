<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta http-equiv='X-UA-Compatible' content='IE=edge' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <link rel='preconnect' href='https://fonts.googleapis.com' />
  <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
  <link href='https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap' rel='stylesheet' />
  <link rel='stylesheet' href='/css/reset.css' />
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet'
    integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous' />
  <link rel='icon' href='/images/pianoIcon.png' type='image/x-icon' />
  <link rel='stylesheet' href='/css/style.css' />

  <title>BandShare</title>
</head>

<body>
  <nav class='navbar mb-3'>
    <div class='container-fluid'>
      <h2 class='m-0'><a href='/' class='text-decoration-none'>Sound Byte</a></h2>

        <form class='d-flex align-items-center mb-0'>
          {{#if logged_in}}
            <a href='/dashboard' class='text-decoration-none mx-2 mb-0'>Profile</a>
            <a href='/' class='text-decoration-none mx-2 mb-0'>Feed</a>
            <a
              href='/dashboard/create'
              class='text-decoration-none mx-2 mb-0'
            >Upload</a>
            <button class='btn btn-secondary ms-4 mb-0' id='logout'>Logout</button>

          {{else}}
            <a href='/login' class='text-decoration-none'>Login</a>
          {{/if}}
        </form>
      </div>
    </nav>
    {{{body}}}
    <footer class='card-footer text-center sticky-bottom d-flex m-auto position-relative' style="width: 100vw">
      <div class='card-footer'>
        <h3>Sound Byte</h3>
        <h5 class='card-title'>Created by Triple J Studios</h5>
        <p class='card-text'>Joshua Carter, Joshua Pica, Jamie Harris</p>
        <a href='https://github.com/JoshuaCarter99/bandshare' class='btn btn-primary'>Github Pages</a>
        <h6>2023</h6>
      </div>
    </footer>
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>
</html>